@{
    ViewData["Title"] = "ConfigurarJuego";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/ConfigurarJuego.css">
    <link rel="shortcut icon" href="https://w7.pngwing.com/pngs/9/393/png-transparent-trivia-crack-no-ads-quiz-logo-game-android-game-smiley-crack-thumbnail.png" type="image/x-icon">
    <title>Configurar Juego</title>
</head>
<body>
    <header class="header">
        <div class="logo-container">
            <img src="https://w7.pngwing.com/pngs/9/393/png-transparent-trivia-crack-no-ads-quiz-logo-game-android-game-smiley-crack-thumbnail.png" alt="Logo del Juego" class="logo">
        </div>
        <h1 class="header-title">Configuración del Juego</h1>
    </header>
    <main class="main">
        <div class="decorative-shapes"></div>
        <form class="config-form">
            <div class="form-group">
                <label for="username">Nombre de Usuario:</label>
                <input type="text" id="username" class="input" placeholder="Ingresa tu nombre de usuario">
            </div>
            <div class="form-group">
                <label for="category-select">Selecciona una Categoría:</label>
                <select id="category-select" class="input">
                    <option value="historia">Historia</option>
                    <option value="geografia">Geografía</option>
                    <option value="deportes">Deportes</option>
                    <option value="entretenimiento">Musica</option>
                    <option value="entretenimiento">Matematica</option>
                </select>
            </div>
            <div class="form-group">
                <label for="difficulty-select">Elige la Dificultad:</label>
                <select id="difficulty-select" class="input">
                    <option value="facil">Fácil</option>
                    <option value="intermedio">Intermedio</option>
                    <option value="dificil">Difícil</option>
                </select>
            </div>



            <a class="start-button" href='@Url.Action("Juego", "Home")'>Comenzar <span class="arrow">➜</span></a>

        </form>
    </main>
</body>
</html>